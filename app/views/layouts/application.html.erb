<!DOCTYPE html>
<html>
<head>
  <title>FinalProject</title>
  <!-- Line below allows the gon variables to be loaded, otherwise they will not show because <%= include_gon %> is in application.html.erb, which is not reloaded on every view (Turbolinks). -->

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<% if user_signed_in? %>
	<header>
		<nav>
				<%= content_tag :ul, class: "nav_link_list" do %>
					<%= content_tag :li, class: "nav_links" do %>
						<%= link_to "Your Trees", user_trees_path(current_user) %>
					<% end %>
					<%= content_tag :li, class: "nav_links" do %>
						<%= link_to "Edit Profile", edit_user_registration_path %>
					<% end %>
					<%= content_tag :li, class: "nav_links" do %>
						<%= link_to "Sign Out", destroy_user_session_path, {method: :delete} %>
					<% end %>
				<% end %>
			<% end %>
		</nav>
	</header>
<div class="main_container">
	<%= yield %>
</div>
</body>
</html>