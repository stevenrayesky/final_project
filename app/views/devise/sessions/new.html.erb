<%= image_tag "marigoldr.jpg", class: "background" %>
<%= content_tag :div, class: "title_container" do %>
  <%= content_tag :span, "Marigold", class: "title_span" %>
<% end %>
<%= content_tag :div, class: "centering_div" do %>
  <%= content_tag :div, class: "login_container" do %>
    <%= content_tag :div, class: "login_div inner_login" do %>
      <%= content_tag :span, "LOGIN", class: "login_span" %>
      <%= render "devise/registrations/existing" %>
    <% end %>
    <%= content_tag :div, class: "signup_div inner_login" do %>
      <%= content_tag :span, "SIGNUP", class: "signup_span" %>
      <%= render "devise/registrations/new" %>
    <% end %>
  <% end %>
<% end %>
