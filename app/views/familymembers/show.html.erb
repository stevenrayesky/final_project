<%= content_tag :div, class: "partners_div" do %>
	<%= content_tag :h3, class: "relationships_heading" do %>
		<%= @familymember.first_name %>'s Partner(s)
	<% end %>
	<% @familymember.partners.each do |p| %>
		<%= content_tag :p do %>
			<%= link_to p.first_name, tree_familymember_path(@tree.id, p.id) %> 
		<% end %>
	<% end %>
<% end %>

