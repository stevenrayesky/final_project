<%= form_for @member, remote: true, url: tree_familymember_path(@tree.id, @member.id), method: :put do |f| %>
	<%= f.select :gender, options_for_select([['male', 'male'], ['female', 'female'], ['transgender', 'transgender']]) %>
	<%= f.text_field :first_name, placeholder: "First name" %>
	<br>
	<%= f.text_field :last_name, placeholder: "Last name" %>
	<br>
	<%= f.text_field :birth_loc, placeholder: "Birth location" %>
	<br>
	<%= f.text_field :death_loc, placeholder: "Death location" %>
	<br>
	<%= f.label :birthday %>
	<%= f.date_field :birthday %>
	<br>
	<%= f.label :death %>
	<%= f.date_field :death %>
	<br>
	<%= f.submit :update %>
<% end %>