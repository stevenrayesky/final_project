<%= form_for @tree, method: :put do |f| %>
		<%= f.text_field :name %>
		<%= f.submit :update, :style => "display: none;" %>
<% end %> 

<% unless @tree.familymembers? %>
	<%= content_tag :div, class: "first_familymember_div" do %>
		<%= content_tag :h3, class: "first_heading" do %>
			Create your first familymember!
		<% end %>
		<%= form_for @familymember, url: tree_familymembers_path(@tree.id) do |f| %>
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>
		<br>
		<%= f.label :last_name %>
		<%= f.text_field :last_name %>
		<br>
		<%= f.label :gender %>
		<%= f.select :male, :female %>
		<br>
		<%= f.label :birthday %>
		<%= f.date_field :birthday %>
		<br>
		<%= f.label :death %>
		<%= f.date_field :death %>
		<br>
		<%= f.label :birth_loc %>
		<%= f.text_field :birth_loc %>
		<br>
		<%= f.label :death_loc %>
		<%= f.text_field :death_loc %>
		<br>
		<%= f.submit :create %>
		<% end %>
	<% end %>
	  
<% end %>

<%= content_tag :svg, class: "main_svg", data: {chart: @chart } do %>
	<%= content_tag :g, class: "main_g" do %>

	<% end %>
<% end %>
<!-- BEGIN OPTIONS MODAL -->
<% if @top %>
	<%= content_tag :div, class: "options_modal" do %>
		<%= content_tag :ul,  class: "options_list" do %>
		<%= content_tag :li, class: "option_item" do %>
				<%= link_to "", tree_familymember_path(@tree.id, @top.id), class: "li_items fa fa-eye fa-2x", id: "view_item" %>
			<% end %>
			<%= content_tag :li, class: "option_item" do %>
				<%= link_to "", edit_tree_familymember_path(@tree.id, @top.id), remote: true, class: "li_items fa fa-pencil-square-o fa-2x", id: "edit_item" %>
			<% end %>
			<%= content_tag :li, class: "option_item" do %>
				<%= link_to image_tag('marigoldicon.png', class: "icons"), new_child_path(@tree.id, @top.id), remote: true, class: "li_items", id: "child_item" %>
			<% end %>
			<%= content_tag :li, class: "option_item" do %>
				<%= link_to "New Parent", new_parent_path(@tree.id, @top.id), remote: true, class: "li_items", id: "parent_item" %>
			<% end %>
			<%= content_tag :li, class: "option_item" do %>
				<%= link_to "New Partner", new_partner_path(@tree.id, @top.id), remote: true, class: "li_items", id: "partner_item" %>
			<% end %>
			<%= content_tag :li, class: "option_item" do %>
				<%= link_to "", tree_familymember_path(@tree.id, @top.id), remote: true, controller: :familymembers, method: :delete, class: "li_items fa fa-trash-o fa-2x", id: "delete_item" %>
			<% end %>
		<% end %>
		<%= content_tag :span, class: "close_modal" do %>
			X
		<% end %>
	<% end %>
<% end %>
<!-- END OPTIONS MODAL -->

