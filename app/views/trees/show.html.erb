<%= content_tag :div, class: "filter" do %>
<% end %>
<%= form_for @tree, method: :put do |f| %>
		<%= f.text_field :name %>
		<%= f.submit :update, :style => "display: none;" %>
<% end %> 
<% unless @tree.familymembers? %>
	<%= content_tag :div, class: "first_familymember_div" do %>
		<%= content_tag :h3, class: "first_heading" do %>
			Create your first familymember!
		<% end %>
		<%= form_for @familymember, url: tree_familymembers_path(@tree.id) do |f| %>
			<%= f.select :gender, options_for_select([['male', 'male'], ['female', 'female'], ['transgender', 'transgender']]) %>
			<%= f.text_field :first_name, placeholder: "First name" %>
			<br>
			<%= f.text_field :last_name, placeholder: "Last name" %>
			<br>
			<%= f.text_field :birth_loc, placeholder: "Birth location" %>
			<br>
			<%= f.text_field :death_loc, placeholder: "Death location" %>
			<br>
			<%= f.label :birthday %>
			<%= f.date_field :birthday %>
			<br>
			<%= f.label :death %>
			<%= f.date_field :death %>
			<br>
			<%= f.submit :create %>
		<% end %>
	<% end %>
	  
<% end %>

<%= content_tag :svg, class: "main_svg", data: {chart: @chart } do %>
	<%= content_tag :g, class: "main_g" do %>

	<% end %>
<% end %>
<!-- BEGIN OPTIONS MODAL -->
<% if @top %>
	<%= content_tag :div, class: "options_modal" do %>
		<%= link_to "", tree_familymember_path(@tree.id, @top.id), class: "modal_options fa fa-eye fa-3x deg330", id: "view_item", title: "View" %>
		<%= link_to "", edit_tree_familymember_path(@tree.id, @top.id), remote: true, class: "modal_options fa fa-pencil-square-o fa-3x deg150", id: "edit_item", title: "Edit" %>
		<%= link_to "", new_child_path(@tree.id, @top.id), remote: true, class: "modal_options fa fa-child fa-3x deg90", id: "child_item", title: "New Child" %>
		<%= link_to "", new_parent_path(@tree.id, @top.id), remote: true, class: "modal_options fa fa-male fa-3x deg270", id: "parent_item", title: "New Parent" %>
		<%= link_to "", new_partner_path(@tree.id, @top.id), remote: true, class: "modal_options fa fa-heart fa-3x deg210", id: "partner_item", title: "New Partner" %>
		<%= link_to "", tree_familymember_path(@tree.id, @top.id), remote: true, controller: :familymembers, method: :delete, class: "modal_options fa fa-trash-o fa-3x deg30", id: "delete_item", title: "Delete" %>
		<%= content_tag :span, class: "close_modal fa fa-times fa-3x " do %>
		<% end %>
	<% end %>
<% end %>
<!-- END OPTIONS MODAL -->

