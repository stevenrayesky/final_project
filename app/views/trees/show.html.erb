<%= form_for @tree, method: :put do |f| %>
		<%= f.label :change_name %>
		<%= f.text_field :name %>
		<%= f.submit :update %>
<% end %>

<%= form_for @familymember, url: tree_familymembers_path(@tree.id) do |f| %>
	<%= f.label :first_name %>
	<%= f.text_field :first_name %>
	<br>
	<%= f.label :last_name %>
	<%= f.text_field :last_name %>
	<br>
	<%= f.label :birthday %>
	<%= f.date_field :birthday %>
	<br>
	<%= f.label :death %>
	<%= f.date_field :death %>
	<br>
	<%= f.label :birth_loc %>
	<%= f.text_field :birth_loc %>
	<br>
	<%= f.label :death_loc %>
	<%= f.text_field :death_loc %>
	<br>
	<%= f.submit :create %>
<% end %>

<%= content_tag :div, class: "members_list" do %>
	<% @all_members.each do |m| %>
		<%= content_tag :p do %>
			<%= m.first_name %>
		<% end %>
	<% end %>
<% end %>
